# ============================================================================
# Content Creation Multi-Agent System - Environment Configuration
# ============================================================================

# Core Ollama Settings
# ----------------------------------------------------------------------------
# The Ollama model to use for content generation
# Options: phi3:mini (4GB), llama3.1:8b (8GB), llama3.1:70b (64GB)
OLLAMA_MODEL=llama3.1:8b

# Base URL for Ollama API server
OLLAMA_BASE_URL=http://localhost:11434

# Temperature for content generation (0.0-2.0, higher = more creative)
OLLAMA_TEMPERATURE=0.7

# Maximum tokens to generate per request
OLLAMA_NUM_PREDICT=4096

# Top-p sampling parameter (0.0-1.0)
OLLAMA_TOP_P=0.9

# Top-k sampling parameter
OLLAMA_TOP_K=40

# Repetition penalty to reduce repetitive text (1.0-2.0)
OLLAMA_REPEAT_PENALTY=1.1

# System Performance Settings
# ----------------------------------------------------------------------------
# Maximum time (seconds) to wait for complete workflow execution
WORKFLOW_TIMEOUT=300

# Maximum number of retry attempts for failed operations
MAX_RETRIES=3

# Base delay (seconds) between retry attempts
RETRY_BASE_DELAY=1.0

# Maximum delay (seconds) between retry attempts
RETRY_MAX_DELAY=60.0

# Circuit breaker failure threshold before opening
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker timeout (seconds) before attempting reset
CIRCUIT_BREAKER_TIMEOUT=60.0

# Security and Validation Settings
# ----------------------------------------------------------------------------
# Enable comprehensive input validation and sanitization
ENABLE_INPUT_VALIDATION=true

# Enable content filtering for inappropriate content
ENABLE_CONTENT_FILTERING=true

# Enable rate limiting to prevent abuse
ENABLE_RATE_LIMITING=true

# Maximum requests per client within time window
RATE_LIMIT_REQUESTS=10

# Rate limit time window in seconds
RATE_LIMIT_WINDOW=300

# Maximum content length for validation (characters)
MAX_CONTENT_LENGTH=50000

# Maximum number of keywords allowed per request
MAX_KEYWORDS=20

# Logging Configuration
# ----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging for production
ENABLE_STRUCTURED_LOGGING=true

# Log file path (optional, logs to console if not specified)
# LOG_FILE_PATH=logs/content_system.log

# Enable security event logging
ENABLE_SECURITY_LOGGING=true

# Content Generation Settings
# ----------------------------------------------------------------------------
# Default tone for content generation
DEFAULT_TONE=professional

# Default content type if not specified
DEFAULT_CONTENT_TYPE=article

# Minimum word count for generated content
MIN_WORD_COUNT=50

# Maximum word count for generated content
MAX_WORD_COUNT=10000

# Default reading speed for time estimation (words per minute)
READING_SPEED_WPM=200

# Web Interface Settings (Streamlit)
# ----------------------------------------------------------------------------
# Streamlit server port
STREAMLIT_PORT=8501

# Enable development mode for Streamlit
STREAMLIT_DEV_MODE=false

# Maximum file upload size for Streamlit (MB)
STREAMLIT_MAX_UPLOAD_SIZE=10

# Session timeout for web interface (seconds)
SESSION_TIMEOUT=3600

# External Services Configuration
# ----------------------------------------------------------------------------
# Enable web search functionality
ENABLE_WEB_SEARCH=true

# Search result limit per query
SEARCH_RESULT_LIMIT=5

# Search timeout (seconds)
SEARCH_TIMEOUT=30

# User-Agent string for web requests
USER_AGENT="Content-Creation-AI-System/1.0"

# Development and Testing Settings
# ----------------------------------------------------------------------------
# Enable testing mode (disables certain production features)
TESTING_MODE=false

# Enable debug mode for verbose output
DEBUG_MODE=false

# Mock external services in testing
MOCK_EXTERNAL_SERVICES=false

# Test data directory path
TEST_DATA_PATH=tests/data/

# Performance Monitoring Settings
# ----------------------------------------------------------------------------
# Enable performance metrics collection
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Maximum metrics history to keep in memory
MAX_METRICS_HISTORY=1000

# Enable system health checks
ENABLE_HEALTH_CHECKS=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Advanced Configuration
# ----------------------------------------------------------------------------
# Content output directory
OUTPUT_DIRECTORY=outputs/

# Temporary files directory
TEMP_DIRECTORY=temp/

# Cache directory for processed data
CACHE_DIRECTORY=cache/

# Enable content caching to improve performance
ENABLE_CACHING=true

# Cache expiration time (seconds)
CACHE_EXPIRATION=3600

# Maximum cache size (MB)
MAX_CACHE_SIZE=100

# Database Configuration (if using persistent storage)
# ----------------------------------------------------------------------------
# Database URL (SQLite by default)
# DATABASE_URL=sqlite:///content_system.db

# Enable database connection pooling
# ENABLE_DB_POOLING=false

# Maximum database connections
# MAX_DB_CONNECTIONS=10

# Content Moderation Settings
# ----------------------------------------------------------------------------
# Enable automatic content moderation
ENABLE_MODERATION=true

# Moderation strictness level: low, medium, high
MODERATION_LEVEL=medium

# Block specific content categories (comma-separated)
BLOCKED_CATEGORIES=violence,hate_speech,adult_content

# Enable PII (Personally Identifiable Information) detection
ENABLE_PII_DETECTION=true

# Notification Settings
# ----------------------------------------------------------------------------
# Enable email notifications for system events
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP server configuration (if email notifications enabled)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true

# Administrator email for system notifications
# ADMIN_EMAIL=admin@yourcompany.com

# ============================================================================
# Instructions:
# 1. Copy this file to '.env' in your project root
# 2. Uncomment and modify settings as needed for your environment
# 3. Never commit the actual '.env' file to version control
# 4. Restart the application after making changes
# ============================================================================